<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianyisoft.showdoc.mapper.UserMapper">
    <update id="update" parameterType="Map">
        update users set
        <foreach collection="changes" item="item" index="index" separator=",">
            ${index} = #{item}
        </foreach>
        where id = #{id}
    </update>
</mapper>
